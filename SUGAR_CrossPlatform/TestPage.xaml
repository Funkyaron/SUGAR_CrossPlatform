<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SUGAR_CrossPlatform.TestPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout
            Padding="40">
            <Button
                x:Name="SaveButton"
                Text="Save Test Profile"
                Clicked="SaveTestProfile"/>
            <Button
                x:Name="ToggleProfileButton"
                Text="Toggle Profile"
                Clicked="ToggleProfile"/>
            <Button
                x:Name="ReadProfileButton"
                Text="Read as Profile"
                Clicked="ReadAsProfile"/>
            <Button
                x:Name="InitButton"
                Text="Init Profile"
                Clicked="InitProfile"/>
            <!--<Button
                x:Name="ScheduleEnableButton"
                Text="Schedule Enable"
                Clicked="ScheduleEnable"/>-->
            <!--<Button
                x:Name="ScheduleDisableButton"
                Text="Schedule Disable"
                Clicked="ScheduleDisable"/>-->
            <Button
                x:Name="CompareButton"
                Text="Compare"
                Clicked="Compare"/>
            <Label
                x:Name="ResultLabel"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
