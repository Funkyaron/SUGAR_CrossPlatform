<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SUGAR_CrossPlatform.DownloadProfilesPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="0,75,0,0">
            <Label Text="Bitte geben Sie die Login-Daten" HorizontalOptions="Center"/>
            <Label Text="fÃ¼r den Server ein" HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal" Margin="50, 30, 0, 0">
                <Label Text="Adresse" VerticalOptions="Center" WidthRequest="120"/>
                <Entry x:Name="ServerAdressInput" WidthRequest="150"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="50,10,0,0">
                <Label Text="Benutzername" VerticalOptions="Center" WidthRequest="120"/>
                <Entry x:Name="UserNameInput" WidthRequest="150"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="50,10,0,0">
                <Label Text="Passwort" VerticalOptions="Center" WidthRequest="120"/>
                <Entry x:Name="UserPasswordInput" WidthRequest="150" IsPassword="true"/>
            </StackLayout>
            <Button Margin="50,25,50,0" x:Name="ConfirmDownloadButton" Text="Download starten" TextColor="Black" BorderColor="Black" BorderWidth="1" BorderRadius="20" Clicked="ConfirmDownload"/>
            <Button Margin="50,5,50,0" x:Name="AbortDownloadButton" Text="Abbrechen" TextColor="Black" BorderColor="Black" BorderWidth="1" BorderRadius="20" Clicked="AbortDownload"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
