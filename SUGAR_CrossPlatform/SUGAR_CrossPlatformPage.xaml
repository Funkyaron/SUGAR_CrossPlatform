<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:SUGAR_CrossPlatform" 
             x:Class="SUGAR_CrossPlatform.SUGAR_CrossPlatformPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label  Text="Willkommen bei SUGAR!"
                    FontSize="25"
                    HorizontalOptions="Center"
                    Margin="0,50,0,0"/>
            <Label  Text="Was möchten Sie tun?"
                    FontSize="25"
                    HorizontalOptions="Center"
                    Margin="0,0,0,0"/>
            <Button x:Name="ShowProfiles"
                    Text="Profile anzeigen"
                    FontSize="15"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    Margin="0,50,0,0"
                    WidthRequest="225"
                    BorderWidth="0.5"
                    BorderRadius="10"
                    Clicked="OpenShowProfiles"
                    />
            <Button x:Name="DoNotDisturb"
                    Text="Ungestört Arbeiten"
                    FontSize="15"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    Margin="0,1,0,0"
                    WidthRequest="225"
                    BorderWidth="0.5"
                    BorderRadius="10"
                    Clicked="OpenDoNotDisturb"
                    />
            <Button x:Name="ClosingTime"
                    Text="Feierabend"
                    FontSize="15"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    Margin="0,1,0,0"
                    WidthRequest="225"
                    BorderWidth="0.5"
                    BorderRadius="10"
                    Clicked="OpenClosingTimes"/>
            <Image x:Name="Logo" Scale="0.25"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
